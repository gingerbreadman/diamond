<div class="page-header">
  <h1>Editing Offer #<%= @offer.id %></h1>
</div>

<%= form_tag(offer_url(@offer), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :price, @offer.price, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :shape, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :shape, @offer.shape, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cut, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :cut, @offer.cut, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :color, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :color, @offer.color, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :clarity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :clarity, @offer.clarity, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :carat, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :carat, @offer.carat, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :comment, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :comment, @offer.comment, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @offer.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :merchant_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :merchant_id, @offer.merchant_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :rfp_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :rfp_id, @offer.rfp_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Offer", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="page-header">
  <h1>Merchants</h1>
</div>

<p><%= link_to 'Add a New Merchant', new_merchant_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Business name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.business_name %></td>
        <td><%= merchant.address %></td>
        <td><%= merchant.city %></td>
        <td><%= merchant.state %></td>
        <td><%= merchant.zip_code %></td>
        <td><%= merchant.email %></td>
        <td><%= merchant.phone_number %></td>
        <td><%= image_tag merchant.image_url, width: 200 %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, merchant_url(merchant), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_merchant_url(merchant), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, merchant_url(merchant), method: 'delete', data: { confirm: "Do you really want to delete this merchant?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="page-header">
  <h1><%= @merchant.business_name %></h1>
</div>

<dl class="dl-horizontal">

  <dt>Address</dt>
  <dd><%= @merchant.address %></dd>

  <dt>City</dt>
  <dd><%= @merchant.city %></dd>

  <dt>State</dt>
  <dd><%= @merchant.state %></dd>

  <dt>Zip code</dt>
  <dd><%= @merchant.zip_code %></dd>

  <dt>Email</dt>
  <dd><%= @merchant.email %></dd>

  <dt>Phone number</dt>
  <dd><%= @merchant.phone_number %></dd>

  <dt>Image</dt>
  <dd><%= image_tag @merchant.image_url, width: 200 %></dd>

</dl>

<div>
<dt>Requests Matched to You</dt>
<% @merchant.matches.each do |match| %>
  <li><%= match.rfp.full_diamond_trait %></li>
<% end %>
</div>

<div>
<dt>Offers You've Made</dt>
<% @merchant.offers.each do |offer| %>
  <li><%= offer.full_diamond_trait %></li>
<% end %>
</div>

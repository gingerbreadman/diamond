<div class="page-header">
  <h1>Rfps</h1>
</div>

<p><%= link_to 'Add a New Rfp', new_rfp_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Max price</th>
      <th>Shape</th>
      <th>Cut</th>
      <th>Color</th>
      <th>Clarity</th>
      <th>Carat</th>
      <th>Comment</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rfps.each do |rfp| %>
      <tr>
        <td><%= rfp.max_price %></td>
        <td><%= rfp.shape %></td>
        <td><%= rfp.cut %></td>
        <td><%= rfp.color %></td>
        <td><%= rfp.clarity %></td>
        <td><%= rfp.carat %></td>
        <td><%= rfp.comment %></td>
        <td><%= rfp.user.full_name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, rfp_url(rfp), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_rfp_url(rfp), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, rfp_url(rfp), method: 'delete', data: { confirm: "Do you really want to delete this rfp?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


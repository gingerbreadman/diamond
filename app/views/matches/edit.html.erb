<div class="page-header">
  <h1>Editing Match #<%= @match.id %></h1>
</div>

<% if @match.errors.any? %>
    <% @match.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
<% end  %>

<%= form_tag(match_url(@match), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :merchant_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :merchant_id, options_from_collection_for_select(Merchant.all, :id, :business_name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :rfp_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :rfp_id, options_from_collection_for_select(Rfp.all, :id, :full_diamond_trait), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Match", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
